     <!-- Group of manually managed containers used for failover testing,
         see ARQ-336 for details. -->
    <group qualifier="clustering-udp-unmanaged">
        <container qualifier="clustering-udp-0-unmanaged" default="true" mode="manual" >
            <configuration>
                <property name="jbossHome">${JBOSS_HOME_1}</property>
                <property name="javaVmArguments">-Xms64m -Xmx512m -XX:MaxPermSize=256m -Djava.net.preferIPv4Stack=true -Dorg.jboss.resolver.warning=true -Dsun.rmi.dgc.client.gcInterval=3600000 -Dsun.rmi.dgc.server.gcInterval=3600000 -javaagent:${BYTEMAN_JAR}=prop:org.jboss.byteman.verbose=true,address:127.0.0.1,port:9091 -Djboss.modules.system.pkgs=org.jboss.byteman -Xbootclasspath/a:${BYTEMAN_JAR}:${BYTEMAN_SUBMIT_JAR}</property>
                <property name="serverConfig">standalone-full-ha.xml</property>
                <property name="managementAddress" >127.0.0.1</property>
                <property name="startupTimeoutInSeconds">60</property>
                <property name="managementPort">9999</property>
            </configuration>
        </container>

        <!-- there is a bug in arquillian - it does not detect server on 127.0.0.2 so management address must be 127.0.0.1 to work properly  -->
        <container qualifier="clustering-udp-1-unmanaged" default="false" mode="manual" >
            <configuration>
                <property name="jbossHome">${JBOSS_HOME_2}</property>
                <property name="javaVmArguments">-Xms64m -Xmx512m -XX:MaxPermSize=256m -Djava.net.preferIPv4Stack=true -Dorg.jboss.resolver.warning=true -Dsun.rmi.dgc.client.gcInterval=3600000 -Dsun.rmi.dgc.server.gcInterval=3600000 -javaagent:${BYTEMAN_JAR}=prop:org.jboss.byteman.verbose=true,address:127.0.0.1,port:9191 -Djboss.modules.system.pkgs=org.jboss.byteman -Xbootclasspath/a:${BYTEMAN_JAR}:${BYTEMAN_SUBMIT_JAR}</property>
                <property name="serverConfig">standalone-full-ha.xml</property>
                <property name="managementAddress" >127.0.0.2</property>
                <property name="managementPort">9999</property>
                <property name="startupTimeoutInSeconds">60</property>
            </configuration>
        </container>
    </group>
    
    
