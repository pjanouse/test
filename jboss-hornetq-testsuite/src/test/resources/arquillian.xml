     <!-- Group of manually managed containers used for failover testing,
         see ARQ-336 for details. -->
    <group qualifier="clustering-udp-unmanaged">
        <container qualifier="clustering-udp-0-unmanaged" default="true" mode="manual" >
            <configuration>
                <property name="jbossHome">${JBOSS_HOME_1}</property>
                <property name="javaVmArguments">-Djboss.node.name=node-udp-0 -javaagent:${BYTEMAN_JAR}=prop:org.jboss.byteman.verbose=true,address:localhost,port:9091 -Djboss.modules.system.pkgs=org.jboss.byteman -Xbootclasspath/a:${BYTEMAN_JAR}:${BYTEMAN_SUBMIT_JAR}</property>
                <property name="serverConfig">standalone-ha.xml</property>
                <property name="managementAddress" >127.0.0.1</property>
                <property name="startupTimeoutInSeconds">60</property>
                <property name="managementPort">9999</property>
            </configuration>
        </container>

        <container qualifier="clustering-udp-1-unmanaged" default="false" mode="manual" >
            <configuration>
                <property name="jbossHome">${JBOSS_HOME_2}</property>
                <property name="javaVmArguments">-Djboss.node.name=node-udp-1 -Djboss.socket.binding.port-offset=100 -javaagent:${BYTEMAN_JAR}=prop:org.jboss.byteman.verbose=true,address:localhost,port:9191 -Djboss.modules.system.pkgs=org.jboss.byteman -Xbootclasspath/a:${BYTEMAN_JAR}:${BYTEMAN_SUBMIT_JAR}</property>
                <property name="serverConfig">standalone-ha.xml</property>
                <property name="managementAddress" >127.0.0.1</property>
                <property name="managementPort">10099</property>
                <property name="startupTimeoutInSeconds">60</property>
            </configuration>
        </container>
    </group>
    
</arquillian>

