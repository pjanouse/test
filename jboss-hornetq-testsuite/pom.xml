        <eap5.client>5.2.0.GA</eap5.client>

        <!-- HAVE TO BE CHANGED WITH EACH EAP 6.x RELEASE -->
        <eap6.client>6.3.0.DR6</eap6.client>
        <eap6.controller.client>6.3.0.DR6</eap6.controller.client>
        <eap6.cli.client>6.3.0.DR6</eap6.cli.client>

        <arquillian.version>1.1.1.Final</arquillian.version>
        <!--<arquillian.eap6x.container.version>7.3.0.Final-redhat-7</arquillian.eap6x.container.version>-->
        <arquillian.eap6x.container.version>7.2.0.Final</arquillian.eap6x.container.version>
        <arquillian.eap5x.container.version>1.0.0.CR3</arquillian.eap5x.container.version>
        <version.byteman>2.0.1</version.byteman>
        <version.junit>4.9</version.junit>
        <version.log4j>1.2.16</version.log4j>
        <version.jnp-client>5.0.5.Final</version.jnp-client>
        <xalan.version>2.7.0</xalan.version>
        <httpclient.version>4.1.3</httpclient.version>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.0.2</version>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>
            <plugin> <!-- this deployes sources as well -->
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <version>2.2.1</version>
                <executions>
                    <execution>
                        <id>attach-sources</id>
                        <goals>
                            <goal>jar-no-fork</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.9</version>
                <configuration>
                    <!--<argLine>-Xmx4096m</argLine>-->
                    <systemPropertyVariables>
                        <BYTEMAN_JAR>
                            ${env.HOME}/.m2/repository/org/jboss/byteman/byteman/${version.byteman}/byteman-${version.byteman}.jar
                        </BYTEMAN_JAR>
                        <BYTEMAN_SUBMIT_JAR>
                            ${env.HOME}/.m2/repository/org/jboss/byteman/byteman-submit/${version.byteman}/byteman-submit-${version.byteman}.jar
                        </BYTEMAN_SUBMIT_JAR>
                        <JBOSS_HOME_1>${env.JBOSS_HOME_1}</JBOSS_HOME_1>
                        <JBOSS_HOME_2>${env.JBOSS_HOME_2}</JBOSS_HOME_2>
                        <JBOSS_HOME_3>${env.JBOSS_HOME_3}</JBOSS_HOME_3>
                        <JBOSS_HOME_4>${env.JBOSS_HOME_4}</JBOSS_HOME_4>
                        <MYTESTIP_1>${env.MYTESTIP_1}</MYTESTIP_1>
                        <MYTESTIP_2>${env.MYTESTIP_2}</MYTESTIP_2>
                        <MYTESTIP_3>${env.MYTESTIP_3}</MYTESTIP_3>
                        <MYTESTIP_4>${env.MYTESTIP_4}</MYTESTIP_4>
                        <MCAST_ADDR>${env.MCAST_ADDR}</MCAST_ADDR>
                        <JOURNAL_DIRECTORY_A>${env.JOURNAL_DIRECTORY_A}</JOURNAL_DIRECTORY_A>
                        <JOURNAL_DIRECTORY_B>${env.JOURNAL_DIRECTORY_B}</JOURNAL_DIRECTORY_B>
                    </systemPropertyVariables>
                </configuration>
            </plugin>
            <plugin> <!-- copy security extension for eap 6 to target dir - used in SslAuthenticationTestCase -->
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.8</version>
                <executions>
                    <execution>
                        <id>copy</id>
                        <phase>test-compile</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.jboss.as.security</groupId>
                                    <artifactId>security-providers</artifactId>
                                    <version>1.0-SNAPSHOT</version>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${basedir}/target</outputDirectory>
                                    <destFileName>security-providers.jar</destFileName>
                                </artifactItem>
                            </artifactItems>
                            <outputDirectory>${basedir}/target</outputDirectory>
                            <overWriteReleases>true</overWriteReleases>
                            <overWriteSnapshots>true</overWriteSnapshots>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

