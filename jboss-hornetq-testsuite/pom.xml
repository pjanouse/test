                        </AIRLIFT_JAR>
                        <GUAVA_JAR>
                            ${com.google.guava:guava:jar}
                        </GUAVA_JAR>
                        <JAVAX_INJECT_JAR>
                            ${javax.inject:javax.inject:jar}
                        </JAVAX_INJECT_JAR>
                        <JBOSS_HOME_1>${env.JBOSS_HOME_1}</JBOSS_HOME_1>
                        <JBOSS_HOME_2>${env.JBOSS_HOME_2}</JBOSS_HOME_2>
                        <JBOSS_HOME_3>${env.JBOSS_HOME_3}</JBOSS_HOME_3>
                        <JBOSS_HOME_4>${env.JBOSS_HOME_4}</JBOSS_HOME_4>
                        <MYTESTIP_1>${MYTESTIP_1}</MYTESTIP_1>
                        <MYTESTIP_2>127.0.0.1</MYTESTIP_2>
                        <MYTESTIP_3>127.0.0.1</MYTESTIP_3>
                        <MYTESTIP_4>127.0.0.1</MYTESTIP_4>

                        <!--Server memory properties injected to arquilian-*.xml -->
                        <JBOSS_JVM_XMX_1>${JBOSS_JVM_XMX}</JBOSS_JVM_XMX_1>
                        <JBOSS_JVM_XMS_1>${JBOSS_JVM_XMS}</JBOSS_JVM_XMS_1>
                        <JBOSS_JVM_XMX_2>${JBOSS_JVM_XMX}</JBOSS_JVM_XMX_2>
                        <JBOSS_JVM_XMS_2>${JBOSS_JVM_XMS}</JBOSS_JVM_XMS_2>
                        <JBOSS_JVM_XMX_3>${JBOSS_JVM_XMX}</JBOSS_JVM_XMX_3>
                        <JBOSS_JVM_XMS_3>${JBOSS_JVM_XMS}</JBOSS_JVM_XMS_3>
                        <JBOSS_JVM_XMX_4>${JBOSS_JVM_XMX}</JBOSS_JVM_XMX_4>
                        <JBOSS_JVM_XMS_4>${JBOSS_JVM_XMS}</JBOSS_JVM_XMS_4>
