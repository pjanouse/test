                        <!--<MCAST_ADDR>${env.MCAST_ADDR}</MCAST_ADDR>-->
                        <JOURNAL_DIRECTORY_A>${env.JOURNAL_DIRECTORY_A}</JOURNAL_DIRECTORY_A>
                        <JOURNAL_DIRECTORY_B>${env.JOURNAL_DIRECTORY_B}</JOURNAL_DIRECTORY_B>
                        <JOURNAL_DIRECTORY_C>${env.JOURNAL_DIRECTORY_C}</JOURNAL_DIRECTORY_C>
                        <JOURNAL_DIRECTORY_D>${env.JOURNAL_DIRECTORY_D}</JOURNAL_DIRECTORY_D>
                        <!-- when you redefine these - DON'T FORGET TO CHANGE "rmiPort" and "MANAGEMENT_PORT" in arquillian-4-nodes.xml -->
                        <!-- 1 and 2 are for EAP 5 server - when redefine these then change "EAP5_VMARGS" and "EAP5_VMARGS_2" in hornetq-interop profile  -->
                        <!--<PORT_OFFSET_1>0</PORT_OFFSET_1>-->
                        <!--<PORT_OFFSET_2>2000</PORT_OFFSET_2>-->
                        <!--&lt;!&ndash; 3 and 4 are for EAP 6 server &ndash;&gt;-->
                        <!--<PORT_OFFSET_3>3000</PORT_OFFSET_3>-->
                        <!--<PORT_OFFSET_4>4000</PORT_OFFSET_4>-->
                        <!--<MANAGEMENT_PORT_1>9999</MANAGEMENT_PORT_1>-->
                        <!--<MANAGEMENT_PORT_2>11999</MANAGEMENT_PORT_2>-->
                        <!--<MANAGEMENT_PORT_3>12999</MANAGEMENT_PORT_3>-->
                        <!--<MANAGEMENT_PORT_4>13999</MANAGEMENT_PORT_4>-->

                    </systemPropertyVariables>
                    <argLine>${hornetq.surefire.jvm.options}</argLine>
                    <failIfNoTests>false</failIfNoTests>
                    <!-- workaround for issue with Junit categories and test class inheritance -->
                    <test>${test}</test>
                    <!-- loads all arquillian.xml files -->
                    <additionalClasspathElements>
                        <additionalClasspathElement>common-tests/src/main/resources</additionalClasspathElement>
                    </additionalClasspathElements>
                </configuration>
            </plugin>
            <plugin> <!-- copy security extension for eap 6 to target dir - used in SslAuthenticationTestCase -->
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.8</version>
                <executions>
                    <execution>
                        <id>copy</id>
                        <phase>test-compile</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.jboss.as.security</groupId>
                                    <artifactId>security-providers</artifactId>
                                    <version>1.0-SNAPSHOT</version>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${basedir}/target</outputDirectory>
                                    <destFileName>security-providers.jar</destFileName>
                                </artifactItem>
                            </artifactItems>
                            <outputDirectory>${basedir}/target</outputDirectory>
                            <overWriteReleases>true</overWriteReleases>
                            <overWriteSnapshots>true</overWriteSnapshots>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.basepom.maven</groupId>
                <artifactId>duplicate-finder-maven-plugin</artifactId>
                <version>1.1.0</version>
            </plugin>
        </plugins>
